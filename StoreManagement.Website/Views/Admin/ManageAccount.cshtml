<div ng-controller="ManageStoreController">
    <div class="container-fluid">
        <div class="row" style="padding: 10px 6px; margin: 10px -18px;">
            <div class="col-md-4 col-sm-6">
                <div class="widget-box bd-orange">
                    <div class="widget-header infobox-orange">
                        <h4 class="widget-title">
                            <i class="fa-credit-card fa"></i>
                            <span>Thông tin tài khoản</span>
                        </h4> 
                    </div>

                    <div class="widget-body" style="border: none; min-height: 144px;">
                        <div class="widget-main">
                            <div class="row">
                                <div class="col-xs-9 info">
                                    <span>Số tiền khả dụng</span>
                                </div>
                                <div class="col-xs-3 data text-right">
                                    <a href="#" ng-bind="AccountInfo.AvailableAmount| currency:'':0"></a>
                                </div>
                                <div class="col-xs-9 info">
                                    <span>Số tiền đã nạp</span>
                                </div>
                                <div class="col-xs-3 data text-right">
                                    <a href="#" ng-bind="AccountInfo.ChargedAmount| currency:'':0"></a>
                                </div>
                                <div class="col-xs-9 info">
                                    <span>Số tiền đã sử dụng</span>
                                </div>
                                <div class="col-xs-3 data text-right">
                                    <a href="#" ng-bind="AccountInfo.UsedAmount| currency:'':0"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="padding-top: 5px">
            <div class="col-md-6">
                <h4 class="dashboard-title">
                    <i class="fa-shopping-cart fa"></i>
                    <span>Đã dùng</span>
                </h4>
            </div>
        </div>
        <div class="row" style="padding-bottom: 10px; padding-top: 10px">
            <div class="col-md-5 col-xs-12 margin-top-5">
                <span grid-filter-for="Charges" place-holder-message="Tìm kiếm"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table grid-data="Charges"
                           grid-data-type="table" @*table/storedprocedure*@
                           grid-data-action="get" @*get/getall*@
                           grid-data-object="T_Trans_StoreCharges" @*table name or stored procedure name*@
                           grid-filter-condition="[StoreId] = {{ParentStore}}"
                           @*must have [fieldname] for each colum field*@
                           grid-sort-condition="[Year] DESC, [Month] DESC" @*must have [fieldname] for each colum field*@
                           class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th grid-defined-colum="Month"><span>Tháng</span></th>
                                <th grid-defined-colum="Year"><span>Năm</span></th>
                                <th grid-defined-colum="NumOrders"><span>Số đơn hàng</span></th>
                                <th grid-defined-colum="Amount"><span>Số tiền</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @*Dataset must have grid id*@
                            <tr ng-repeat-start="item in DataSet.Charges.Data">
                                <td>
                                    <a class="icon" ng-click="SelectMonth(item)">
                                        <i ng-if="SelectedMonth != item.Month || SelectedYear != item.Year" class="fa-plus-circle fa"></i>
                                        <i ng-if="SelectedMonth == item.Month && SelectedYear == item.Year" class="fa-minus-circle fa"></i>
                                    </a>
                                </td>
                                <td><span ng-bind="item.Month"> </span></td>
                                <td><span ng-bind="item.Year"></span></td>
                                <td><span ng-bind="item.NumOrders"> </span></td>
                                <td><span ng-bind="item.Amount | currency:'':0"></span></td>
                            </tr>
                            <tr ng-repeat-end ng-if="SelectedMonth == item.Month && SelectedYear == item.Year">
                                <td colspan="5">
                                    <div class="row col-md-12 bold margin-top-5">Danh sách đơn hàng</div>
                                    <div class="row width-98">
                                        <div class="col-md-12">
                                            <div class="table-responsive">
                                                <table grid-data="Orders"
                                                       grid-data-type="table" @*table/storedprocedure*@
                                                       grid-data-action="get" @*get/getall*@
                                                       grid-data-object="T_Trans_Orders" @*table name or stored procedure name*@
                                                       grid-filter-condition="[StoreId.ParentStore] = {{ParentStore}} 
                                                                            and month([CreatedDate]) = {{SelectedMonth}}
                                                                            and year([CreatedDate]) = {{SelectedYear}}" @*must have [fieldname] for each colum field*@
                                                       grid-sort-condition="[CreatedDate] ASC" @*must have [fieldname] for each colum field*@
                                                       class="table table-striped table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th grid-defined-colum="StoreId.StoreCode"><span>Mã cửa hàng</span></th>
                                                            <th grid-defined-colum="OrderCode"><span>Mã đơn hàng</span></th>
                                                            <th grid-defined-colum="CreatedDate"><span>Ngày tạo</span></th>
                                                            <th grid-defined-colum="Cashier.UserName, CashierName"><span>Thu ngân</span></th>
                                                            <th grid-defined-colum="SumMoney"><span>Tổng tiền</span></th>
                                                            <th grid-defined-colum="OrderStatus.StatusName"><span>Tình trạng</span></th>
                                                            <th grid-defined-colum="IsActive"><span>Bị xóa</span></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @*Dataset must have grid id*@
                                                        <tr ng-repeat="item in DataSet.Orders.Data">
                                                            <td><span ng-bind="item.StoreCode"></span></td>
                                                            <td><span ng-bind="item.OrderCode"></span></td>
                                                            <td><span ng-bind="item.CreatedDate"></span></td>
                                                            <td><span ng-bind="item.CashierName"></span></td>
                                                            <td><span ng-bind="item.SumMoney | currency:'':0"></span></td>
                                                            <td><span ng-bind="item.StatusName"></span></td>
                                                            <td>
                                                                <span ng-if="item.IsActive = 1">Không</span>
                                                                <span ng-if="item.IsActive = 0">Có</span>
                                                            </td>
                                                        </tr>
                                                        <tr ng-if="!DataSet.Orders.HasRecord()">
                                                            @*Edit colspan*@
                                                            <td colspan="7" align="center"> Không có đơn hàng! </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <span grid-paging-for="Orders"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr ng-if="!DataSet.Charges.HasRecord()">
                                @*Edit colspan*@
                                <td colspan="5" align="center"> Không có dữ liệu! </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <span grid-paging-for="Charges"></span>
                    </div>
                    <div class="col-md-3">
                        <span grid-page-size-for="Charges"></span>
                    </div>
                </div> 
            </div>
        </div>
        <div class="row" style="padding-top: 5px">
            <div class="col-md-6">
                <h4 class="dashboard-title">
                    <i class="fa-dollar fa"></i>
                    <span>Đã nạp</span>
                </h4>
            </div>
        </div>
        <div class="row" style="padding-bottom: 10px; padding-top: 10px">
            <div class="col-md-5 col-xs-12 margin-top-5">
                <span grid-filter-for="Histpory" place-holder-message="Tìm kiếm"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table grid-data="Histpory"
                           grid-data-type="table" @*table/storedprocedure*@
                           grid-data-action="get" @*get/getall*@
                           grid-data-object="T_Trans_StoreActivation" @*table name or stored procedure name*@
                           grid-filter-condition="[StoreId] = {{ParentStore}}"
                           @*must have [fieldname] for each colum field*@
                           grid-sort-condition="[CreatedDate] DESC" @*must have [fieldname] for each colum field*@
                           grid-sum-collection="" @*must have [fieldname] for each colum field*@
                           class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th grid-defined-colum="Payer"><span>Người giao tiền</span></th>
                                <th grid-defined-colum="Amount"><span>Số tiền</span></th>
                                <th grid-defined-colum="CreatedDate"><span>Ngày nộp</span></th>
                                <th grid-defined-colum="CreatedBy.UserName, CreatorName"><span>Người nhận</span></th>
                                <th grid-defined-colum="PaymentType.PaymentName"><span>Hình thức nộp</span></th>
                                <th grid-defined-colum="Description"><span>Ghi chú</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @*Dataset must have grid id*@
                            <tr ng-repeat="item in DataSet.Histpory.Data">
                                <td ng-bind="item.Payer"></td>
                                <td ng-bind="item.Amount | currency:'':0"></td>
                                <td ng-bind="item.CreatedDate"></td>
                                <td ng-bind="item.CreatorName"></td>
                                <td ng-bind="item.PaymentName"></td>
                                <td ng-bind="item.Description"></td>
                            </tr>
                            <tr ng-if="!DataSet.Histpory.HasRecord()">
                                @*Edit colspan*@
                                <td colspan="6" align="center"> <span>Không có dữ liệu!</span> </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <span grid-paging-for="Histpory"></span>
                    </div>
                    <div class="col-md-3">
                        <span grid-page-size-for="Histpory"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

