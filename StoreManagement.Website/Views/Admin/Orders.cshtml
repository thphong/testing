<div id="OrderController" ng-controller="OrderController">
    @if (!String.IsNullOrWhiteSpace(@ViewBag.Status))
    {
        <div ng-init="AdditionalFilter.Status = '@ViewBag.Status'"></div>
    }
    <div class="container-fluid none-display" ng-class="{'active-content' : !IsShowOrderDetail}">
        <div ng-if="!IsShowOrderDetail">
            <div class="row" style="padding-top: 5px">
                <div class="col-md-6">
                    <h4 class="dashboard-title">
                        <i class="fa-shopping-cart fa"></i>
                        <span ng-bind="Language.Resource.Orders"></span>
                    </h4>
                </div>
                <div class="col-md-4 pull-right text-right">
                    <button class="btn btn-success btn-primary" ng-click="AddOrder()" ng-if="OrderFormConfig._CanCreate">
                        <i class="fa fa-desktop white"></i>
                        <span ng-bind="Language.Resource.MakeOrder"></span>
                    </button>
                    <span grid-export-import-for="Orders" grid-export-template="Orders.xlsx"></span>
                </div>
            </div>
            <div class="row" style="padding-bottom: 10px; padding-top: 10px">
                <div class="col-md-5 col-xs-12 margin-top-5">
                    <span grid-filter-for="Orders" place-holder-message="{{Language.Resource.PlaceholderOrder}}"></span>
                </div>
                <div class="col-md-2 col-xs-12 margin-top-5">
                    <select class="form-control input-sm" ng-model="AdditionalFilter.OrderType" ng-change="ReloadGrid('Orders')">
                        <option selected="selected" value="1" ng-bind="Language.Resource.Orders"></option>
                        <option value="2" ng-bind="Language.Resource.RemovedOrder"></option>
                        <option value="3" ng-bind="Language.Resource.DebtOrders"></option>
                    </select>
                </div>
                <div class="col-md-5 col-xs-12 margin-top-5">
                    @if (!String.IsNullOrWhiteSpace(@ViewBag.DateRangeCode))
                    {
                        <span date-range-filter-for="Orders" date-range-init-code="@ViewBag.DateRangeCode"></span>
                    }
                    else
                    {
                        <span date-range-filter-for="Orders" date-range-init-code="2"></span>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table grid-data="Orders"
                               grid-data-type="table" @*table/storedprocedure*@
                               grid-data-action="get" @*get/getall*@
                               grid-data-object="T_Trans_Orders" @*table name or stored procedure name*@
                               grid-filter-condition="(([IsActive] = 1 and {{AdditionalFilter.OrderType}} = 1)
                    or ({{AdditionalFilter.OrderType}} = 2 and  [IsActive] = 0)
                    or ({{AdditionalFilter.OrderType}} = 3 and [DebtMoney] > 0 and [IsActive] = 1))
                    and ([StoreId] = {{CurrentStore}})
                    and ({{AdditionalFilter.Status}} = 0 or {{AdditionalFilter.Status}} = [OrderStatus])
                    and  ([SoldDate] is null or
                           convert(date, [SoldDate]) between dbo.UFN_System_GetDateTime(''{{FilterRangeDate.StartDate}}'', ''dd-MM-yyyy'')
                                                    and  dbo.UFN_System_GetDateTime(''{{FilterRangeDate.EndDate}}'', ''dd-MM-yyyy''))"
                               @*must have [fieldname] for each colum field*@
                               grid-sort-condition="[OrderCode] ASC" @*must have [fieldname] for each colum field*@
                               grid-sum-collection="[SumMoney];[DebtMoney]" @*must have [fieldname] for each colum field*@
                               class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th grid-defined-colum="!OrderId" class="none-display"></th>
                                    <th grid-defined-colum="!Customer.IsWholeSale, CustomerIsWholeSale" class="none-display"></th>
                                    <th grid-defined-colum="OrderCode"><span ng-bind="Language.Resource.OrderCode"></span></th>
                                    <th grid-defined-colum="StoreId.StoreCode"><span ng-bind="Language.Resource.Store"></span></th>
                                    <th grid-defined-colum="SoldDate"><span ng-bind="Language.Resource.SoldDate"></span></th>
                                    <th grid-defined-colum="Cashier.UserName, CashierName"><span ng-bind="Language.Resource.Cashier"></span></th>
                                    <th grid-defined-colum="Customer.CustomerName"><span ng-bind="Language.Resource.Customers"></span></th>
                                    <th grid-defined-colum="OrderStatus.StatusName">
                                        <span style="display: inline-block">
                                            <select class="form-control min-width-100" ng-model="AdditionalFilter.Status" dropdown-master-table="T_Master_OrderStatus" dropdown-value-field="StatusId"
                                                    dropdown-name-field="StatusName" dropdown-empty-text="{{Language.Resource.Status}}" dropdown-empty-value="0"
                                                    ng-change="ReloadGrid('Orders')"></select>
                                        </span>
                                    </th>
                                    <th grid-defined-colum="SumMoney"><span ng-bind="Language.Resource.SumMoney"></span></th>
                                    <th grid-defined-colum="DebtMoney"><span ng-bind="Language.Resource.Debit"></span></th>
                                    <th></th>
                                    <th grid-defined-colum="!OrderStatus.DisplayClass" class="none-display"></th>
                                    <th grid-defined-colum="!Notes" class="none-display"></th>
                                    <th grid-defined-colum="!IsActive" class="none-display"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @*Dataset must have grid id*@
                                <tr ng-repeat="item in DataSet.Orders.Data">
                                    <td>
                                        <a href="#" ng-bind="item.OrderCode" ng-click="ShowOrderDetail(item)"></a>
                                        <span ng-if="item.Notes" title="{{item.Notes}}" class="badge badge-primary"
                                              data-toggle="tooltip" data-placement="bottom">
                                            <i class="fa fa-info"></i>
                                        </span>
                                    </td>
                                    <td ng-bind="item.StoreCode"></td>
                                    <td ng-bind="item.SoldDate"></td>
                                    <td ng-bind="item.CashierName"></td>
                                    <td ng-bind="item.CustomerName"></td>
                                    <td>
                                        <span class="{{item.DisplayClass}}" ng-bind="item.StatusName"></span>
                                    </td>
                                    <td><span ng-bind="item.SumMoney | currency:'':0" class="bold"></span></td>
                                    <td ng-bind="item.DebtMoney  | currency:'':0"></td>
                                    <td>
                                        <a class="grey margin-left-10" ng-click="PrintOrderAdmin(item, 'ORDER_ADMIN')">
                                            <i class="fa-print fa"></i>
                                        </a>
                                        <a class="red margin-left-10" ng-if="item._CanDelete" ng-click="DeleteOrder(item)">
                                            <i class="fa-trash fa"></i>
                                        </a>
                                    </td>
                                </tr>
                                <tr ng-if="!DataSet.Orders.HasRecord()">
                                    @*Edit colspan*@
                                    <td colspan="9" align="center"> <span ng-bind="Language.Resource.NoDataFound"></span> </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="9" align="left">
                                        <div style="float: left;">
                                            <span ng-bind="Language.Resource.SumOrder"></span>: <span class="total-highlight" ng-bind="DataSet.Orders.TotalItems"></span>
                                            <span ng-bind="Language.Resource.SumMoney"></span>: <span class="total-highlight"><span ng-bind="DataSet.Orders.Sums.SumMoney | currency:'':0"></span> đ</span>
                                            <span ng-bind="Language.Resource.Debit"></span>: <span class="total-highlight"><span ng-bind="DataSet.Orders.Sums.DebtMoney | currency:'':0"></span> đ</span>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            <span grid-paging-for="Orders"></span>
                        </div>
                        <div class="col-md-3">
                            <span grid-page-size-for="Orders"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid none-display" ng-class="{'active-content' : IsShowOrderDetail}">
        <div ng-show="IsShowOrderDetail" ng-include src="'@Url.Action("OrderDetail", "Admin")'">
        </div>
    </div>
    <div class="none-display" id="divPrint">
        <div>
            <span bind-html-compile="PrintTemplate">
            </span>
        </div>
    </div>
</div>