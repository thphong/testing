
<!-- Customer Modal -->
<div id="supplierModal" class="modal fade " role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header infobox-blue white border-6">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tạo mới nhà cung cấp </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Tên nhà cung cấp </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="SupplierForm.SupplierName" placeholder="Nhập tên nhà cung cấp (bắt buộc)"
                                   check-empty="" check-empty-message="Vui lòng nhập tên nhà cung cấp."
                                   check-length="300" check-length-message="Chiều dài tối ta là {0}." />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Mã nhà cung cấp </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="SupplierForm.SupplierCode" placeholder="Nhập mã nhà cung cấp (tự động sinh nếu để trống)"
                                   check-length="50" check-length-message="Chiều dài tối ta là {0}."
                                   check-custom="CheckSupplierCodeUnique" check-custom-message="Mã nhà cung cấp không được trùng mã đã tồn tại." />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Số điện thoại </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="SupplierForm.Phone" placeholder="Nhập số điện thoại (không bắt buộc)"
                                   check-length="50" check-length-message="Chiều dài tối ta là {0}." />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Email </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="SupplierForm.Email" placeholder="Nhập Email (không bắt buộc)"
                                   check-length="50" check-length-message="Chiều dài tối ta là {0}."
                                   check-custom="CheckEmailValid" check-custom-message="Vui lòng nhập email hợp lệ." />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Địa chỉ </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="SupplierForm.Address" placeholder="Nhập địa chỉ (không bắt buộc)"
                                   check-length="500" check-length-message="Chiều dài tối ta là {0}." />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Mã số thuế </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="SupplierForm.TaxCode" 
                                   check-length="50" check-length-message="Chiều dài tối ta là {0}." />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Ghi chú </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="SupplierForm.Notes"
                                   check-length="500" check-length-message="Chiều dài tối ta là {0}." />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa-undo fa"></i>
                    Trở về
                </button>
                <button type="button" class="btn btn-primary" ng-click="SaveSupplierForm()">
                    <i class="fa-save fa"></i>
                    Lưu
                </button>
            </div>
        </div>

    </div>
</div>
