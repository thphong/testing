<div id="costModal" class="modal fade " role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header infobox-primary white border-6">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tạo mới chi phí </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Tên chi phí </label>
                        <div class="col-sm-7">
                            <input class="form-control" ng-model="CostForm.CostName" placeholder="Nhập tên chi phí (bắt buộc)"
                                   check-empty="" check-empty-message="Vui lòng nhập tên chi phí."
                                   check-length="200" check-length-message="Chiều dài tối ta là {0}."/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12" ng-init="InitFilterCurrency()">
                        <label class="col-sm-4 control-label ">Số tiền </label>
                        <div class="col-sm-7">
                            <input class="form-control check-currency" ng-model="CostForm.Amount" placeholder="Nhập số tiền (bắt buộc)"
                                   check-empty="" check-empty-message="Vui lòng nhập số tiền."
                                   check-range="1;" check-range-message="Vui lòng nhập số tiền là số dương" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-sm-4 control-label ">Ghi chú </label>
                        <div class="col-sm-7">
                            <textarea class="form-control" ng-model="CostForm.Notes"
                                      check-length="500" check-length-message="Chiều dài tối ta là {0}."></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa-undo fa"></i>
                    Trở về
                </button>
                <button type="button" class="btn btn-primary" ng-click="SaveCostForm()">
                    <i class="fa-save fa"></i>
                    Lưu
                </button>
            </div>
        </div>

    </div>
</div>

