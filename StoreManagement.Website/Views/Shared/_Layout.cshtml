<body class="theme-pholo">
    <div id="wrapper" >
        <!-- Navigation -->
        <div id="mdlMenu">
            <nav id="LoadMenuController" ng-controller="LoadMenuController" class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <a id="logo" class="pull-left" href="@Url.Content("~")"></a> 
                <span ng-init="CurrentUrl = '@StoreManagement.Website.SessionCollection.LastUrl'"></span>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle white" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar white"></span>
                        <span class="icon-bar white"></span>
                        <span class="icon-bar white"></span>
                    </button>
                    <a class="navbar-brand white" href="#">
                        @StoreManagement.Website.SessionCollection.StoreName
                    </a>
                </div>
                @if (StoreManagement.Website.SessionCollection.IsLogIn)
            {
            <!-- /.navbar-header -->
                    <ul class="nav navbar-top-links navbar-right text-right">
                        <input type="text" style="border: 0px solid white" 
                               placeholder="#Thao tac nhanh" 
                               autocomplete-master-table="T_Master_QuickAction"
                               autocomplete-colum-id="Code"
                               autocomplete-colum-name="Action"
                               autocomplete-colum-additional="Link"
                               autocomplete-model-id="#txtQuickActionCode"
                               autocomplete-model-additional="#txtQuickActionLink"/>
                        <input id="txtQuickActionCode" class="none-display" ng-model="DataAction.Action"/>
                        <input id="txtQuickActionLink" class="none-display" ng-model="DataAction.Link" />
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-shopping-cart white fa-fw"></i>  <i class="fa fa-caret-down white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-alerts">
                                <li style="padding:10px">
                                    <b>Cửa hàng</b>
                                    <input class="form-control" id="autoStore" ng-model="StoreName"
                                   placeholder="Chọn cửa hàng" ng-init="InitListAutoCompleteStores('#autoStore')"/>
                                </li>
                            </ul>
                        </li>

                        <!-- /.dropdown -->
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-user white fa-fw"></i>  <i class="fa fa-caret-down white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#" id="linkUserInfo" ng-click="LoadViewBody('@Url.Action("Info", "Account")')"><i class="fa fa-user fa-fw"></i> 
                                        <span>Thông tin</span>
                                    </a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="#" ng-click="LogOut()"><i class="fa fa-sign-out fa-fw"></i> 
                                        <span>Thoát</span>
                                    </a>
                                </li>
                            </ul>
                            <!-- /.dropdown-user -->
                        </li>
                        <!-- /.dropdown -->
                    </ul>
            <!-- /.navbar-top-links -->
                    <div class="navbar-default sidebar" role="navigation">
                        <div class="sidebar-nav navbar-collapse">
                            <ul class="nav" id="side-menu">
                                <li class="sidebar-shortcuts">
                                    <div class="input-group custom-search-form">
                                        <a target="_blank" href="@Url.Action("Index", "POS")" class="btn btn-warning white" title="Nhấp vào đây để bán hàng" style="width: 90%; margin: 7px 10px; font-weight: bold;">
                                            <i class="fa fa-desktop" style="margin-right: 12px;"></i> <span>POS - Bán hàng</span>
                                        </a>
                                    </div>
                                    <!-- /input-group -->
                                </li>
                                <li ng-class="{'active' : (menu.Url == CurrentUrl)}" ng-repeat="menu in ListMenu">
                                    <a href="#" action="{{menu.Url}}" class="left-menu" ng-click="LoadViewBody(menu.Url)">
                                        <i class="{{menu.CssClass}}"></i>
                                        <span bind-html-compile="menu.Menu"></span>
                                        <span ng-if="menu.Url == CurrentUrl" class="fa arrow"></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.sidebar-collapse -->
                    </div>
            <!-- /.navbar-static-side -->
            }
            else
            {
                    @RenderBody()
            }
            </nav>
        </div>
        @if (StoreManagement.Website.SessionCollection.IsLogIn)
        {
        <!-- Page Content -->
            <div id="page-wrapper">
                <div id="body" >
                    <form id="mdlCommon" method="post" enctype="multipart/form-data">
                        <div id="bodyView" ng-include src="SrcView">
                            @RenderBody()
                        </div>
                        <i class="fa fa-refresh white loading img-loading"></i>
                    </form>
                </div>
                <!-- /.container-fluid -->
            </div>
        }
        <!-- /#page-wrapper -->
    </div>
